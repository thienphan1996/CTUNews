<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rcv_home"
                android:scrollbars="vertical"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:orientation="horizontal"
            android:id="@+id/rtl_home">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_home_previous"
                android:layout_width="@dimen/btn_width"
                android:layout_height="wrap_content"
                android:text="@string/PREVIOUS_LABLE"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:layout_margin="@dimen/micro_margin"
                app:cornerRadius="@dimen/big_radius"
                app:rippleColor="@color/colorBackgroundHome"
                android:backgroundTint="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tv_home_current_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_margin"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size"
                android:textColor="@android:color/white"
                android:text="Trang 1"
                android:layout_toRightOf="@+id/btn_home_previous"
                android:layout_toLeftOf="@+id/btn_home_next"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_home_next"
                android:layout_width="@dimen/btn_width"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/NEXT_LABLE"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/micro_margin"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textColor="@android:color/white"
                app:cornerRadius="@dimen/big_radius"
                app:rippleColor="@color/colorBackgroundHome"
                android:backgroundTint="@color/colorPrimary"/>
        </RelativeLayout>
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/pro_home"
        android:layout_width="@dimen/min_height_item"
        android:layout_height="@dimen/medium_radius"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/animation_loading"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"  />
</RelativeLayout>